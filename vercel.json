{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js",            "use": "@vercel/node"   },
    { "src": "css/**/*.css",           "use": "@vercel/static" },
    { "src": "js/**/*.js",             "use": "@vercel/static" },
    { "src": "assets/images/**/*",     "use": "@vercel/static" },
    { "src": "components/**/*.html",   "use": "@vercel/static" },
    { "src": "*.html",                 "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)",              "dest": "/api/$1"       },
    { "handle": "filesystem" }
  ]
}
